<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group name="no-visible" numcolumns="12">
            <column name="idasientopre" display="none" order="100">
                <widget type="text" fieldname="idasientopre" readonly="true"/>
            </column>
        </group>
        
        <group name="data" numcolumns="12">
            <column name="subaccount" numcolumns="3" order="100">
                <widget type="autocomplete" fieldname="codsubcuenta" required="true" icon="fas fa-th-list" onclick="EditSubcuenta">
                    <values source="subcuentas" fieldcode="codsubcuenta" fieldtitle="descripcion" />
                </widget>
            </column>
            <column name="description" order="120">
                <widget type="text" fieldname="concepto" maxlength="255" required="true"/>
            </column>
            <column name="debit" numcolumns="2" order="130">
                <widget type="text" fieldname="debe"/>
            </column>
            <column name="credit" numcolumns="2" order="140">
                <widget type="text" fieldname="haber"/>
            </column>
            <column name="sort" numcolumns="2" order="150">
                <widget type="number" decimal="0" min="0" max="999" step="5" fieldname="orden" />
            </column>
        </group>
    </columns>
</view>