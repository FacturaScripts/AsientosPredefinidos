<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>

        <group name="no-visible" numcolumns="12">
            <column name="idasientopredefinidolinea" display="none" order="100">
                <widget type="text" fieldname="idasientopredefinidolinea" readonly="true"/>
            </column>
            <column name="idasientopredefinido" display="none" order="110">
                <widget type="text" fieldname="idasientopredefinido" readonly="true"/>
            </column>
        </group>

        <group name="data" numcolumns="12">
            <column name="subaccount" numcolumns="6" order="120">
                <widget type="autocomplete" fieldname="codsubcuenta" required="true" icon="fas fa-th-list" onclick="EditSubcuenta">
                    <values source="subcuentas" fieldcode="codsubcuenta" fieldtitle="descripcion" />
                </widget>
            </column>
            <column name="counterpart" numcolumns="6" order="130">
                <widget type="autocomplete" fieldname="codcontrapartida" icon="fas fa-th-list" onclick="EditSubcuenta">
                    <values source="subcuentas" fieldcode="codsubcuenta" fieldtitle="descripcion" />
                </widget>
            </column>
            <column name="description" numcolumns="6" order="140">
                <widget type="text" fieldname="concepto" maxlength="255" required="true"/>
<!--                <widget type="autocomplete" fieldname="concepto" required="true">
                    <values source="conceptos_partidas" fieldcode="descripcion" fieldtitle="codconcepto" strict="false" />
                </widget>-->
            </column>
            
            
            <column name="debit" numcolumns="2" display="right" order="150">
                <widget type="money" fieldname="debe">
                    <option color="danger">lt:0</option>
                </widget>
            </column>
            <column name="credit" numcolumns="2" display="right" order="160">
                <widget type="money" fieldname="haber">
                    <option color="danger">lt:0</option>
                </widget>
            </column>
            
            
            <column name="sort" numcolumns="1" order="170">
                <widget type="number" decimal="0" min="0" max="999" step="5" fieldname="orden" />
            </column>
            
        </group>
    </columns>
</view>
